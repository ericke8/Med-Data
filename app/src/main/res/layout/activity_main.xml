<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3FC"
    tools:context=".data.MainActivity">


    <LinearLayout
        android:id="@+id/topDiv"
        android:layout_width="match_parent"
        android:layout_height="488dp"
        android:background="#E6F0F0"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/gradient"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="60dp">


            <TextView
                android:id="@+id/AlertTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Medical Recall Alerts"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/alertText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alerts"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:fontFamily="@font/quicksand" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/newsDiv"
            android:layout_width="match_parent"
            android:layout_height="286dp"
            android:layout_margin="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="60dp">


            <TextView
                android:id="@+id/foodRecallText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/foodRecallTitle"
                android:textSize="16dp"
                android:textAlignment="center"
                app:fontFamily="@font/quicksand" />


            <ScrollView
                android:id="@+id/SCROLLER_ID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:fillViewport="true">

            <TextView
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:text="@string/news"
                android:textSize="16dp"
                app:fontFamily="@font/quicksand" />

            </ScrollView>



        </LinearLayout>






    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#D7F5F1"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topDiv">

        <Button
            android:id="@+id/editButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round"
            android:onClick="myMedsSwitch"
            android:text="@string/editList"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>

